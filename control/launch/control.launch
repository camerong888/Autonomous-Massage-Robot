<!-- control.launch -->

<launch>
    <!-- Load control parameters -->
    <rosparam file="$(find control)/config/control_parameters.yaml" command="load"/>

    <!-- Launch the kortex_driver -->
    <include file="$(find kortex_driver)/launch/kortex_driver.launch">
        <arg name="ip_address" value="192.168.1.10"/>
        <arg name="robot_name" value="my_gen3"/>
    </include>

    <!-- Launch the arm_controller node -->
    <node name="arm_controller" pkg="control" type="arm_controller.py" output="screen"/>

    <!-- Launch the impedance_controller node -->
    <node name="impedance_controller" pkg="control" type="impedance_controller.py" output="screen"/>
</launch>
